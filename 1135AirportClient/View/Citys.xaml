<Page x:Class="_1135AirportClient.View.Citys"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_1135AirportClient.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Citys">

    <Grid>
        <ListView ItemsSource="{Binding ModelsApi.CityApi}" SelectedItem="{Binding SelectedCity}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название" Width="110" DisplayMemberBinding="{Binding Title}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
